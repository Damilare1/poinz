{
  "name": "poinz-server",
  "version": "0.17.4",
  "description": "Distributed Planning Poker",
  "private": true,
  "author": "xeronimus@gmail.com",
  "license": "MIT",
  "homepage": "https://github.com/Zuehlke/poinz",
  "repository": {
    "type": "git",
    "url": "https://github.com/Zuehlke/poinz.git"
  },
  "type": "module",
  "scripts": {
    "test": "jest \"./test/unit\" \"./test/integration\"",
    "test:system": "jest \"./test/system\"",
    "test:migration": "jest --runInBand \"./test/migrations\"",
    "pretest": "npm run lint",
    "lint": "eslint \"src/**/*.js\" \"test/**/*.js\" \"migrations/**/*.js\" \"./*js\"",
    "format": "prettier --write \"src/**/*.js\" \"test/**/*.js\" \"migrations/**/*.js\" \"./*js\"",
    "start": "node lib/server.js",
    "migrate:status": "migrate-mongo status",
    "migrate:down": "migrate-mongo down",
    "migrate": "migrate-mongo up"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/test/unit/setup.js"
    ],
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testMatch": [
      "**/test/**/*Test.js"
    ]
  },
  "dependencies": {
    "body-parser": "^1.20.0",
    "express": "4.18.1",
    "express-sslify": "1.2.0",
    "fastq": "1.13.0",
    "jsonwebtoken": "^8.5.1",
    "migrate-mongo": "9.0.0",
    "mongodb": "4.9.1",
    "nanoid": "3.3.4",
    "papaparse": "5.3.2",
    "rate-limiter-flexible": "^2.3.10",
    "socket.io": "4.5.2",
    "tv4": "1.3.0",
    "winston": "3.8.2",
    "winston-daily-rotate-file": "4.7.1"
  },
  "devDependencies": {
    "@babel/cli": "7.18.10",
    "@babel/core": "7.19.1",
    "@babel/preset-env": "7.19.1",
    "@babel/register": "7.18.9",
    "@faker-js/faker": "^7.5.0",
    "babel-jest": "29.0.3",
    "eslint": "8.23.1",
    "jest": "29.0.3",
    "socket.io-client": "4.5.2"
  },
  "engines": {
    "node": ">=16"
  }
}
